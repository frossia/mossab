- @papers = Newspaper.find(:all, :order => "id desc", :limit => 4).reverse
.content-panel
  h5.h-post Выпуски газеты
  hr.hr-post
  ul.bxslider
    - @papers.each do |paper|
      li.t-c
        = paper.title
        .newspaper-panel.t-c
          a href='#{paper.attachment.url}' target="_blank"
            = image_tag('/uploads/newspaper/attachment/'+paper.id.to_s+'/thumbnail.png', :class => 'letter letter-' + rand(1..2).to_s, :style => 'height: 250px')

  .t-r
    hr.hr-post
    a.link href='#{newspapers_path}' Все выпуски
    /= link_to 'Все выпуски', newspapers_path


