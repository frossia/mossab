- posts = Post.all.hot
- unless Post.all.hot.blank?
  #box.slider-panel.hidden-sm.hidden-xs
    ul.main-slider
      - posts.each do |post|
        li#li-slide
          - unless post.intro_post_image.blank?
            h4 = post.title
            hr.post
            .row
              .col-md-4
                = image_tag(post.intro_post_image)
              .col-md-8
                = raw post.introtext
          - else
            h4 = post.title
            hr.slider
            .t-j
              = raw post.introtext